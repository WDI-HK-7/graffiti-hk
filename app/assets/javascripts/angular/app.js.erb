'use strict'; // Make sure you don't have syntax errors

// var app = angular.module('appName', ['oneDependency']);
var app = angular.module('graffiti-hk', ['ngRoute']);

app.config(['$routeProvider',function($routeProvider) {
  // Configure Angular Routes
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/login', {
      templateUrl: "<%= asset_path('users/login.html') %>",
      controller: 'LoginCtrl'
    }).
    when('/posts', {
      templateUrl: "<%= asset_path('posts/index.html') %>",
      controller: 'PostsIndexCtrl'
    }).
    when('/posts/:id', {
      templateUrl: "<%= asset_path('posts/show.html') %>",
      controller: 'PostsShowCtrl'
    }).
    when('/new_posts', {
      templateUrl: "<%= asset_path('posts/new.html') %>",
      controller: 'PostsNewCtrl'
    }).
    when('/likes', {
      templateUrl: "<%= asset_path('likes/index.html') %>",
      controller: 'LikesIndexCtrl'
    }).
    when('/new_likes', {
      templateUrl: "<%= asset_path('likes/new.html') %>",
      controller: 'LikesNewCtrl'
    })
    

    // .
    // otherwise({
    //   redirectTo: '/'
    // });

    // $locationProvider.html5Mode(true);
}]);